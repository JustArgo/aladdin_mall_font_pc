			var remark = $("input[name=remark]").val();
			if(sum==''){
				alert("请填写充值金额");
				return;
			}
			if(externalOrderId.trim()==''){
				alert("请填写交易单号");
				return;
			}
			sum = parseFloat($("input[name=sum]").val());
			if(isNaN(sum)){
				alert("请填写正确的充值金额");
				return;
