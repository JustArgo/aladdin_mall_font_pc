<!DOCTYPE html>
<html>
<head>
#parse("./common/resources.vm")
    <!-- title -->
    <title>阿拉丁--找回邮箱成功</title>
</head>
<body>
<!-- header -->
#parse("./common/header.vm")
    
    <!-- content-bar-->
    <section class="content-bar">
        <div class="content">
            <div class="container">
                <div class="form-box">
                    <form>
                        <h2 class="password">找回密码</h2>
                        <div class="row">
                            <ul class="step-list">
                                <li>
                                    <a href="javascript:;">
                                        <em>1</em>
                                        <p>填写用户名</p>
                                     </a>
                                </li>
                                <li class="active">
                                    <a href="javascript:;">
                                        <em>2</em>
                                        <p>验证身份</p>
                                     </a>
                                </li>
                                <li class="negative">
                                    <a href="javascript:;">
                                        <em >3</em>
                                        <p class="complete">设置新密码</p>
                                     </a>
                                </li>
                                <li class="negative">
                                    <a href="javascript:;">
                                        <em>
                                            <i class="icon-check"></i>
                                        </em>
                                        <p class="complete">完成</p>
                                     </a>
                                </li>
                            </ul>
                        </div>
                        <div class="row">
                            <div class="message-box emial" style="width:50%;">
                                <div class="detail">
                                    <p>
                                        <span>账户名：</span>$nickname
                                    </p>
                                    <p style="margin-top:20px;">
                                        <span style="font-size:14px;color:#339966;">已向你的邮箱&nbsp;$email&nbsp;发送了一封密码重置邮件。</span>
                                    </p>
                                </div>
                                <!--<button type="button" class="btn btn-mailbox">发送验证邮件</button>-->                   
                            </div>
                        </div>
                    </div>
                </form>   
            </div>
        </div>
    </section>

    <!-- footer -->
    #parse("./common/footer.vm")
</body>
</html>