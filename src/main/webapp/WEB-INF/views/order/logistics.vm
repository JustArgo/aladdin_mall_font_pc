<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>物流信息</title>
 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<script src="${link.contextPath}/js/jquery-2.1.3.min.js"></script>
<link rel="stylesheet" href="${link.contextPath}/css/pay-success.css" type="text/css" />
<style>
	.except-add{
		border-bottom: 2px solid gray;
		margin: 5px 15px 5px 15px;
		min-height: 70px;
		padding-bottom: 5px;
		position: relative
	}
	.except-add div:last-child{
		height: 40px;
		line-height: 40px;
		width: 100%;
		position: absolute;
		bottom:0px;
	}
</style>
</head>

<body>
#parse("./common/header.vm") 
	<div id="container">
		<div class="header">
			<a href="javascript:history.go(-1);" class="header-back btn">
				<img class="img1" src="${link.contextPath}/images/classfiy/back_n.png">
				<img class="img2" src="${link.contextPath}/images/classfiy/back_p.png">
			</a>
			<span>物流信息</span>
		</div>
		<div class="except-adds">
			#foreach($logisticsInfo in ${logisticsFormVo.logisticsInfos})
				<div class="except-add">
					<div>$!{logisticsInfo.context}</div>
					<div><span style="float:left;width:50%;">时间:$!{logisticsInfo.time}</span></div>
				</div>
			#end
		</div>
	</div>
</body>
<script>
    $(function(){
		$(".pay-link").click(function(){
			if($(this).hasClass("bg1")){
				$(this).removeClass("bg1").addClass("bg2");
			}else{
				$(this).removeClass("bg2").addClass("bg1");
			}
		});
		$(".btn").click(function(){
			if($(this).find(".img1").is(":visible")){
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			}else{
				$(this).find(".img1").show();
				$(this).find(".img2").hide();;
			}
		})
	});
</script>
</html>