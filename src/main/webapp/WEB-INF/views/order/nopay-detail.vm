<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>订单详情</title>
 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<script src="${link.contextPath}/js/jquery-2.1.3.min.js"></script>
<link rel="stylesheet" href="${link.contextPath}/css/noPayorder-detail.css" type="text/css" />
</head>
<body>
#parse("./common/header.vm") 
<div id="container">
    <div class="header">
        <a href="${link.contextPath}/order/order-index" class="header-back btn">
			<img class="img1" src="../images/back_n.png">
			<img class="img2" src="../images/back_p.png">
		</a>
        <span>订单详情</span>
    </div>
	<div class="nopay-title">
		<p>等待买家付款</p>
		<p style="color:#E81959">${remainTime}订单自动关闭</p>
	</div>
	<div class="order-address">
		<div class="order-left">
			<div class="order-left-top">
				<table class="order-tb">
					<tr>
						<td style="width:50px;text-align:right;padding-right:5px;">收货人:</td>
						<td><span>$!{recName}</span><span style="position:absolute;right:30px;color:#666">$!{recMobile}</span></td>
					</tr>
				</table>
			</div>
			<div class="order-left-bottom">
				<table class="order-tb">
					<tr style="vertical-align:top;">
						<td style="width:55px;">收货地址:</td>
						<td style="text-align:left:color:#cecece;color:#666">$!{address}</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
	<div class="order-info">
		<div class="info-content">
			<p>订单号：<span>$!{orderCode}</span></p>
			
			#foreach($childOrder in $childOrderVo)
				<p>供应商：<span>$!{childOrder.supName}</span></p>
				#foreach($childOrderProduct in $childOrder.childOrdreProductVo)
					<div class="info-bottom">
						<div class="info-bottom-img imgLiquidNotFill">
							<a href="#"><img src="${childOrderProduct.skuImg}" /></a>
						</div>
							<p class="bottom-1">$childOrderProduct.productName</p>
							<p class="bottom-2">
								#foreach($skuStr in $childOrderProduct.skuStrs)
									<span>$skuStr</span>&nbsp;
								#end
							</p>
							<p class="bottom-3"><span style="color:#F389AA;font-size:14px;">￥$number.format("#0.00",$math.div($childOrderProduct.skuPrice,100))</span><span class="number">x$childOrderProduct.buyNum</span></p>
					</div>
				#end
			#end
			
		</div>
	</div>
	<div class="order-note">
		<div class="note-title">备注</div>
			<div class="note-text">
				$!{notes}
			</div>
			<div class="order-freight">
				<p class="freight-1"><span>运费</span><span>￥$number.format("#0.00",$math.div($pFee,100))</span></p>
				<p class="freight-1"><span>实付款(含运费)</span><span>￥$!number.format("#0.00",$math.div($pSum,100))</span></p>
			</div>
			<div class="note-btn">
				<a href="https://eco-api.meiqia.com/dist/standalone.html?eid=7466">
				<img src="../images/service_n.png" />
				联系客服
				</a>	
			</div>
	</div>
	<div class="show-order">
		<table class="show-order-tb">
				<tr>
					<td>订单编号：</td>
					<td>$!{orderCode}</td>
				</tr>
				<tr>
					<td>下单时间：</td>
					<td>$!date.format("yyyy-MM-dd HH:mm:ss",${createTime})</td>
				</tr>
				#if($invoiceName)
				<tr>
					<td>发票抬头</td>
					<td>$!{invoiceName}</td>
				</tr>
				#end
		</table>
	</div>
	<div class="footer-menu">
		<div class="menu">
			<a href="javascript:" class="btn cancel">
				<div class="menu-top">
					<img class="img1" src="../images/cancellation_order_n.png" />
					<img class="img2" src="../images/cancellation_order_p.png" />
				</div>
				<div class="menu-bottom">
					取消订单
				</div>
			</a>
		</div>
		<div class="menu">
			<a href="javascript:" class="btn pay">
				<div class="menu-top">
					<img class="img1" src="../images/payment_n.png" />
					<img class="img2" src="../images/payment_p.png" />
				</div>
				<div class="menu-bottom">
					付款
				</div>
			</a>
		</div>
	</div>
</div>
</body>
<script>
    $(function(){
    	
		$(".btn").click(function(){
			if($(this).find(".img1").is(":visible")){
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			}else{
				$(this).find(".img1").show();
				$(this).find(".img2").hide();
			}
			setTimeout(function(){
				$(".btn").find(".img1").show();
				$(".btn").find(".img2").hide();
			},1000)
		});
		
		$(".evaluate-btn").click(function(){
			$(this).css({"color":"#fff","background-color":"#E81959"});
			setTimeout(function(){
				$(".evaluate-btn").css({"color":"#5e5b5c","background-color":"#fff"});
			},1000)
		});
		
		$(".star1").click(function(){
			var index = $(this).index();
			var num = $(".star1").length;
			console.log("num"+num);
			console.log("index"+index);
			for(var i=0;i<=index;i++){
				$(".star1").eq(i).attr("src","../images/star_p.png");
				for(var j=index+1;j<num;j++){
					$(".star1").eq(j).attr("src","../images/star_n.png");
				}
			}
		})
		$(".star2").click(function(){
			var index = $(this).index();
			var num = $(".star2").length;
			console.log("num"+num);
			console.log("index"+index);
			for(var i=0;i<=index;i++){
				$(".star2").eq(i).attr("src","../images/star_p.png");
				for(var j=index+1;j<num;j++){
					$(".star2").eq(j).attr("src","../images/star_n.png");
				}
			}
		});
		$(".star3").click(function(){
			var index = $(this).index();
			var num = $(".star3").length;
			console.log("num"+num);
			console.log("index"+index);
			for(var i=0;i<=index;i++){
				$(".star3").eq(i).attr("src","../images/star_p.png");
				for(var j=index+1;j<num;j++){
					$(".star3").eq(j).attr("src","../images/star_n.png");
				}
			}
		});
		
		//取消订单按钮
		$(".cancel").click(function(){
			location.href="${link.contextPath}/order/cancel?orderCode=${orderCode}";
		});
		
		//继续付款
		$(".pay").click(function(){
			location.href="${link.contextPath}/order/pay-again?orderCode=${orderCode}";
		});
		
		
	});
</script>
#parse("./common/img_adjust.vm")
</html>
