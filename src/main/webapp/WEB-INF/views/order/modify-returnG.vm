    <script type="text/javascript">
    	$(function(){
			    
    		$("[name=returnReason]").val("${returnReasonCode}");
			$("textarea[name=returnDesc]").val("$!{returnDesc}");
			
			
			$(".btn-register").click(function(){
				var returnReason = $("[name=returnReason]").val();
				var refundFee = $(".refund-fee").val();
				var returnDesc = $("[name=returnDesc]").val();
				
				if(refundFee.trim()==''){
					alert("请填写退款金额！");
					return;
				}
				
				refundFee = parseFloat(refundFee);
				if(isNaN(refundFee) || refundFee<=0){
					alert("请填写合法的退款金额");
					return;
				}
				
				if(refundFee>$!{refundLimit}){
					alert("您输入的金额超出退款金额");
					return;
				}
				
				console.log(returnReason+" "+refundFee+" "+returnDesc);
				
				$("input[name=refundFee]").val(refundFee.toFixed(2)*100);
				
				location.href="/order/apply-return-goods?modify=1&orderCode=$!{orderCode}&orderProductID=$!{orderProductID}&returnReason="+returnReason+"&refundFee="+$("input[name=refundFee]").val()+"&returnDesc="+returnDesc;
	    		
			});
			
