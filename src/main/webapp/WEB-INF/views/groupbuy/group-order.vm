
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>拼团订单</title>
 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<script src="${link.contextPath}/js/jquery-2.1.3.min.js"></script>
<link rel="stylesheet" href="${link.contextPath}/css/group-order.css" type="text/css" />
</head>
 <!-- 对应情况进行跳转 
 添加供应商，修改订单状态展示方式-20160309-20:40
 添加评论的链接 - 2016-3-14
 -->
<body>
#parse("./common/header.vm") 
<div id="container">
    <div class="header">
        <a href="${link.contextPath}/groupbuy" class="header-back btn">
			<img class="img1" src="${link.contextPath}/images/back_n.png">
			<img class="img2" src="${link.contextPath}/images/back_p.png">
		</a>
        <span>拼团订单</span>
    </div>
	<div class="header-menu">
		<ul>
			<li><a href="#" id="menu-all" style="color:#E81959">全部</a></li>
			<li><a href="#" id="menu-1">待发货</a></li>
			<li><a href="#" id="menu-2">待评论</a></li>
		<ul>
	</div>

	#foreach($pinOrderMap in $pinOrders)
		#if($pinOrderMap.pinOrder.payStatus=='PAY' && $pinOrderMap.pinOrder.shippingStatus=='NOT')
			<div class="order-info1">
				<div class="info-content">
					<div class="info-bottom">
					<div class="titleb">供应商：$pinOrderMap.pinOrderProduct.supName<span>待发货<span></div>
						<a href="group-deliver-detail.html"><div class="info-bottom-img">
							<img src="${link.contextPath}/images/thumbnail2.png" />
						</div>
						<p class="bottom-1" style="font-size:16px;">$!{pinOrderMap.sellDesc}</p>
						<p class="bottom-3"><span style="color:#F389AA;font-size:16px;">￥$number.format("#0.00",${pinOrderMap.pinOrderProduct.price})</span></p>
						<div class="bottom-4">
							<div class="bottom-number">数量x${pinOrderMap.pinOrderProduct.count}</div>
							<a href="group-deliver-detail.html" class="btn-select"><div class="bottom-number-right bg1">
								查看订单详情
							</div></a>
						</div></a>
						<!-- <div class="fixed-img">
							<a href="#"><img src="${link.contextPath}/images/red.png" /></a>
						</div> -->
					</div>
				</div>
			</div>
		#elseif($pinOrderMap.pinOrder.shippingStatus=='HAV'&& $pinOrderMap.pinOrder.commentStatus=='NOT')
			<div class="order-info2">
				<div class="info-content">
					<div class="info-bottom">
					<div class="titleb">供应商：$pinOrderMap.pinOrderProduct.supName<span>待评论<span></div>
						<a href="group-comment-detail.html"><div class="info-bottom-img">
						<img src="${link.contextPath}/images/thumbnail.png" />
						</div>
						<p class="bottom-1" style="font-size:16px;">$!{pinOrderMap.sellDesc}</p>
						<p class="bottom-3"><span style="color:#F389AA;font-size:16px;">￥$number.format("#0.00",${pinOrderMap.pinOrderProduct.price})</span></p>
						<div class="bottom-4">
							<div class="bottom-number">数量x${pinOrderMap.pinOrderProduct.count}</div>
							<a href="../personal-center/my-order/evaluate.html" class="btn-select"><div class="bottom-number-right bg1">
								评  论
							</div></a>
						</div></a>
						<!-- <div class="fixed-img">
							<a href="#"><img src="${link.contextPath}/images/blue.png" /></a>
						</div> -->
					</div>
				</div>
			</div>
		#else
			<div class="order-info3">
				<div class="info-content">
					<div class="info-bottom">
					<div class="titleb">供应商：$pinOrderMap.pinOrderProduct.supName<span>其它<span></div>
						<a href="group-comment-detail.html"><div class="info-bottom-img">
						<img src="${link.contextPath}/images/thumbnail.png" />
						</div>
						<p class="bottom-1" style="font-size:16px;">$!{pinOrderMap.sellDesc}</p>
						<p class="bottom-3"><span style="color:#F389AA;font-size:16px;">￥$number.format("#0.00",${pinOrderMap.pinOrderProduct.price})</span></p>
						<div class="bottom-4">
							<div class="bottom-number">数量x${pinOrderMap.pinOrderProduct.count}</div>
							<a href="../personal-center/my-order/evaluate.html" class="btn-select"><div class="bottom-number-right bg1">
								评  论
							</div></a>
						</div></a>
						<!-- <div class="fixed-img">
							<a href="#"><img src="${link.contextPath}/images/blue.png" /></a>
						</div> -->
					</div>
				</div>
			</div>
		#end
	#end
	
	
</div>
</body>
<script>
    $(function(){
		$(".btn").click(function(){
			if($(this).find(".img1").is(":visible")){
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			}else{
				$(this).find(".img1").show();
				$(this).find(".img2").hide();
			}
		});
		$(".btn-select").click(function(){
			if($(this).find(".bg1")){
				$(".bottom-number-right").removeClass("bg2").addClass("bg1");
				$(this).find(".bottom-number-right").removeClass("bg1").addClass("bg2");
			}
			setTimeout(function(){
				$(".bottom-number-right").removeClass("bg2").addClass("bg1");
			},1500)
		});
		$("#menu-all").click(function(){
		$("#menu-1").css({"color":"#555"});
		$("#menu-2").css({"color":"#555"});
		$(this).css({"color":"#E81959"});
		$(".order-info1").show();
		$(".order-info2").show();
		$(".order-info3").show();
	});
	$("#menu-1").click(function(){
		$("#menu-all").css({"color":"#555"});
		$("#menu-2").css({"color":"#555"});
		$(this).css({"color":"#E81959"});
		$(".order-info1").show();
		$(".order-info2").hide();
		$(".order-info3").hide();
	});
	$("#menu-2").click(function(){
		$("#menu-all").css({"color":"#555"});
		$("#menu-1").css({"color":"#555"});
		$(this).css({"color":"#E81959"});
		$(".order-info1").hide();
		$(".order-info2").show();
		$(".order-info3").hide();
	});
	});
	

</script>
</html>