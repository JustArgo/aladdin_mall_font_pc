</head>
<style>
.img1{position:relative;top:5px;left:-5px;width:25px;height:25px;}
</style>
<script>
$(function(){
	share_title = "（泛系科技）商品分类";
	share_desc = "搜索全部（泛系科技）商品，多种商品任您挑选！";
	share_link = window.location.href;
	
	 $(".btn").click(function(){
		var text = $(".search-text");
		if($(this).find(".img1").is(":visible")){
			$(this).find(".img1").hide();
			$(this).find(".img2").show();
		}else{
			$(this).find(".img2").hide();
			$(this).find(".img1").show();
		}
		if(text.val()==""){
			$(".btn").attr("href","search-fail.html");
		}else{
			$(".btn").attr("href","search-success.html");
		}
 	});
	$(".select").click(function(){
		$(".select").removeClass("bg");
		$(".select").css("color","#cecece");
		$(".select").find(".flag").hide();
		$(this).find(".flag").show();
		$(this).addClass("bg");
		$(this).css("color","#E81959");
	})
	$(".select-2").click(function(){
		if($(this).find(".bg2").hasClass("bg2")){
			$(this).removeClass("bg2");
		}else{
			$(".select-2").removeClass("bg2");
			$(this).addClass("bg2");
		}
	})
		
	$('#search').click(function(){
		window.location.href="$link.getContextURL()/product/search-index";
	})
	$("#keyWord").focus(function(){
		window.location.href="${link.contextPath}/product/search-index";
	});
	$(".classfiy-content ul li:first-child").addClass("bg2");
	$(".classfiy-content ul li:first-child a").css("color","#fff");
});
</script>
<body>
#parse("./common/header.vm") 
<div id="container">
    <div class="header">
		<a href="$link.contextPath/"><div class="header-0">
			<img src="$link.contextPath/images/classfiy/back_n.png"/>
		</div></a>
		<div class="header-2">	
			<input type="text" id="keyWord" class="search-text" placeholder="输入关键字"/>
		</div>
		<a id="search" class="btn" ><div class="header-3">
			<img src="$link.getContextPath()/images/classfiy/search_n.png" />
			<img src="$link.getContextPath()/images/classfiy/search_p.png" style="display:none" />
		</div></a>
    </div>
	<div class="classfiy-menu">
		<ul>
			#foreach($item in $productCategory)
			<li><a href="#" class="select #if($velocityCount==1) bg #end " #if($velocityCount==1) style="color:#E81959;" #end>
				<img class="img1" src="$item.img.attrValueImg" />
				<img class="img2" src="$link.getContextPath()/images/classfiy/import_p.png" />
				$item.parent.className
				<div class="flag" #if($velocityCount==1) style="display:block;" #end><img src="$link.getContextPath()/images/classfiy/arrow.png" /></div>
			</a><li>
			#end
		</ul>
	</div>
	<div class="classfiy-main">
		#foreach( $item in $productCategory)
		<div class="classfiy-content" #if($velocityCount==1) style="display:block" #end>
			<ul>
				#foreach( $item2 in $item.leafs)
				<li><a href="$link.getContextPath()/product/list/category/$item2.ID" class="select-2 ">$item2.className</a></li>
				#end
			</ul>
		</div>
		#end
	</div>
</div>
	
