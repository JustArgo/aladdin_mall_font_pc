<script>
	$(function() {
		share_link='http://$request.serverName?iv=$session.getAttribute("principal").userId';
		$(".btn").click(function() {
			if ($(this).find(".img1").is(":visible")) {
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			} else {
				$(this).find(".img1").show();
				$(this).find(".img2").hide();
			}
		});
		
		$(".btn2").click(function(){
			if($(this).find(".img1").is(":visible")){
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
				$(this).css({"background-color":"#E81959","color":"#fff","width":"100%","margin-left":"0"});
			}
			setTimeout(function(){
				$(".btn2").find(".img1").show();
				$(".btn2").find(".img2").hide();
				$(this).css({"background-color":"#fff","color":"#555","width":"94%","margin-left":"3%"});
			},1000)
		});

	});
</script>
