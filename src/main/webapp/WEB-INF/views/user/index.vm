    <!-- title -->
    <title>个人中心</title>
    <script>
    $(function(){
    	var chart1 = echarts.init(document.getElementById('chart1'));
    	// 指定图表的配置项和数据
    	var option = {
    		    title: {
    		        text: '近5天我的销售收入'
    		    },
    		    tooltip: {
    		        trigger: 'axis'
    		    },
    		    grid: {
    		        left: '3%',
    		        right: '4%',
    		        bottom: '3%',
    		        containLabel: true
    		    },
    		    xAxis: {
    		        type: 'category',
    		        boundaryGap: false,
    		        data: [
    		               #foreach($item in $dailySales)
    		               	'$item.dateMonth'#if($velocityCount!=$dailySales.size()),#end
    		               #end
    		               ]
    		    },
    		    yAxis: {
    		    	type : 'value',
    		    	axisLabel : {
    		    		formatter: function(value){
    		    			return value+"元";
    		    		}
    		    	}
    		    },
    		    series: [
    		        {
    		            name:'佣金',
    		            type:'line',
    		            stack: '总量',
    		            data:[
    		                  #foreach($item in $dailySales)
    		                  	'$number.format("#0.00",$math.div($item.remainReward,100))'#if($velocityCount!=$dailySales.size()),#end
    		                  #end
    		                  ]
    		        }
    		    ]
    		};
        // 使用刚指定的配置项和数据显示图表。
        chart1.setOption(option);
        

    	var chart2 = echarts.init(document.getElementById('chart2'));
    	// 指定图表的配置项和数据
        var option2 = {
            title: {
                text: '今日平台销售排行榜'
            },
            tooltip: {},
            grid: {
		        left: '3%',
		        right: '4%',
		        bottom: '3%',
		        containLabel: true
		    },
            yAxis: {
		    	type : 'value',
		    	axisLabel : {
		    		formatter: function(value){
		    			return value+"元";
		    		}
		    	}
		    },
            xAxis: {
                data: [
                       #foreach($item in $dailyTopSales)
	                  	'$!item.nickname'#if($velocityCount!=$dailySales.size()),#end
	                   #end
                       ]
            },
            series: [{
                name: '销量',
                type: 'bar',
                data: [
                       #foreach($item in $dailyTopSales)
	                  	'$number.format("#0.00",$math.div($item.remainReward,100))'#if($velocityCount!=$dailySales.size()),#end
	                   #end
                       ]
            }]
        };

        // 使用刚指定的配置项和数据显示图表。
        chart2.setOption(option2);
    })
    </script>
