		function checkTel(value){
			var filter = /^(([0\+]\d{2,3}-)?(0\d{2,3})-)?(\d{7,8})(-(\d{3,}))?$/;
			var isPhone = /^([0-9]{3,4}-)?[0-9]{7,8}$/;
			var isMob=/^((\+?86)|(\(\+86\)))?(1[3-9][0-9]{9})$/;
			if(isPhone.test(value)||filter.test(value)||isMob.test(value)){
				return true;
			}else{
				return false;
			}
		}
		
